        //tu sobie emituje żeby wyjść - jak zmieni użytkownik coś w skrypcie, to gra mu przestanie działać póki nie zamknie przeglądarki i tyle, a innym nie
        //socket.emit('getOutGame');
           //jest inaczej 
        /*socket.on('gotOutGame', function(){ 
          alert(msg + " wygrał!");
          //było window location od razu do pokoju
        });*/
        alert(msg + " wygrał!");
        window.location = "/rooms/room/game/leave";
      });

      socket.on('draw', function(msg){
        alert("remis");
        window.location = "/rooms/room/game/leave";
      });

    </script>
  </body>
</html>
